{
  "watch": [
    "routes/**/*.js",
    "controllers/**/*.js",
    "models/**/*.js",
    "config/**/*.js",
    "middlewares/**/*.js",
    "index.js"
  ],
  "ignore": [
    "wa_admin_session/**",
    "wa_sessions/**",
    "node_modules/**",
    "*.log",
    ".git"
  ],
  "ext": "js,json",
  "delay": "2000",
  "verbose": false,
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'ðŸ”„ Nodemon restarting server...'"
  }
}